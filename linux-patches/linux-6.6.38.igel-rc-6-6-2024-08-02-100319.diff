+static int write_smc(struct applesmc_device *smc, const char *key,
+	const u8 *buffer, u8 len)
+{
+	if (smc->iomem_base_set) {
+		return iomem_write_smc(smc, APPLESMC_WRITE_CMD, key, buffer, len);
+	} else {
